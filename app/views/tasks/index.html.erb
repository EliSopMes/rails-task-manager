<div class="container" style="text-align:left; width: 1000px;">
  <h1 style="font-size: 50px; padding: 30px;"> <strong>My tasks</strong></h1>
  <ul style="list-style: none;">
    <% @tasks.each do |task| %>
      <li style="font-size: 32px; padding-bottom: 30px; width: 500px;">
        <input type="checkbox" <%= task.completed? ? "checked" : "unchecked"%> style="width:20px; height:20px;">
        &nbsp;
        <%=link_to task.title, task_path(task)%> -
        <%=link_to "❌", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"}, style:"text-decoration:none;" %>
      </li>
    <% end %>
  </ul>

  <p> <%= link_to "+ add a new task", new_path, class:"btn btn-primary btn-lg", style:"margin-left:30px;"%> </p>
</div>
