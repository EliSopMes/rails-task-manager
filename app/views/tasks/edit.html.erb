<div class="container" style="text-align:left; width: 1000px; border-bottom: 1px solid grey;">
  <h2 style="font-size: 50px; padding: 30px;"> <strong>Edit task</strong></h2>


  <%= form_with model: @task do |f| %>
    <%= f.label :title, style:"margin-left:60px; font-size:25px;" %>
    <%= f.text_field :title, style:"width:800px; margin-left:10px; height:40px; font-size:23px;" %>
    <br>
    <br>
    <%= f.label :details, style:"margin-left:30px; font-size:25px;" %>
    <%= f.text_field :details, style:"width:800px; margin-left:10px; height:40px; font-size:23px;" %>
    <br>
    <br>
    <p style="margin-left:30px; font-size:23px;"><%= f.check_box :completed, style:"width: 18px; height: 18px;" %> completed</p>
    <%= f.submit "📤 submit", class:"btn btn-primary btn-lg", style:"margin-left:775px; width: 160px;" %>
    <br>
    <br>
  <% end %>
</div>
<%= link_to "← back to list", root_path, class:"btn btn-outline-primary btn-lg", style:"width: 160px; margin-left:263px; margin-top:20px;"%>
